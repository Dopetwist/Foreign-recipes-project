<%- include("partials/header.ejs") %>

   <main>
      <a href="/"><i class='bx bx-arrow-back back-arrow'></i></a>

      <div class="outter-container" id="srch-con">
         <% if (locals.message) { %> 
            <p class="err-msg err-margin2"> <%= message %> </p>
         <% } %>
         
         <div class="container sub-con">
            <div class="display">
         
               <!-- This section lists all categories of recipes -->
               <% if(locals.apiData) { %> 
         
                  <h2> Categories: </h2>
                  
                  <% apiData.meals.forEach((item) => { %>  
                     <ul>
                        <li>
                           <a href="/category/<%= item.strCategory %>"> <%= item.strCategory %>  </a>
                        </li>
                     </ul>
                  <% }); %> 
               <% } %> 
         
            </div>
         </div>
      </div>
   </main>

<%- include("partials/footer.ejs") %>