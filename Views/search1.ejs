<%- include("partials/header.ejs") %>

    <main>
        <a href="/" class="arrow-link"><i class='bx bx-arrow-back back-arrow'></i></a>

        <div class="outter-container" id="srch-con">
            <div class="input-con">
                <!-- Search input field for a particular recipe name --> 
                <div class="container search-container">
                    
                    <div class="search-bar">
                        <form action="/display-search1?currentPage=search1" method="POST">
                        
                            <label for="search">Search for a Meal:</label>
                            <br>
                            <input type="text" id="input" name="input" placeholder="Write a Recipe Name..." >
                
                            <input type="submit" value="Search" class="search-btn">
                        </form>
                
                        <% if (locals.message) { %> 
                            <p class="err-msg"> <%= message %> </p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </main>

<%- include("partials/footer.ejs") %>